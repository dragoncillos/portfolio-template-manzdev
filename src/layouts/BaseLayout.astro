---
import "@fontsource-variable/playfair-display";
import "@fontsource-variable/jost";
import { ViewTransitions } from 'astro:transitions';
import NavBar from '@components/NavBar.astro';
import HeroBanner from "@components/HeroBanner.astro";
import FooterBlock from '@components/FooterBlock.astro';
const {title, description, hero} = Astro.props;
---
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body>
		<NavBar></NavBar>
		<HeroBanner character={hero} />
		<main>
			<slot></slot>
		</main>
		<FooterBlock />
	</body>
</html>

<style is:global>
	:root {
		--theme-color-lightest: #f3e1d8;
		--theme-color-light: #f29057;
		--theme-color-medium: #d9734e;
		--theme-color-dark: #404959;
		--theme-color-darkest: #000;
		--theme-color-warm-light: #fdd9c8;

		--font-serif: "Playfair Display Variable", sans-serif;
		--font-sans: "Jost Variable", sans-serif;
		--font-size-base: 1.5rem;

		--background-text: color-mix(in srgb, var(--theme-color-warm-light), white 80%);
	}

	body {
		margin: 0;
		font-size: var(--font-size-base);
		background: var(--theme-color-warm-light);
	}

	main {
		transform: translateY(-2rem);
		padding: 2rem;
	}
</style>