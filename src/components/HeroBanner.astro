---
const {character} = Astro.props;
---

<style>
	.hero {
		--color-dark: color-mix(in srgb, var(--theme-color-dark), black 60%);
		--color-light: color-mix(in srgb, var(--theme-color-dark), white 60%);

		width: 100%;
		height: 350px;
		background-image:
			url("/images/black-felt.png"),
			linear-gradient(
				color-mix(in srgb, var(--theme-color-dark), transparent 15%),
				color-mix(in srgb, var(--theme-color-light), transparent 5%)),
			radial-gradient(circle, transparent 0% 15%, black 35%),
			repeating-conic-gradient(
				var(--color-dark) 0 15deg,
				var(--color-light) 15deg 30deg); /* Mola!!!! */
		overflow: hidden; /* para que el gato no se salga del hero */
		display: flex;
		justify-content: center;
		clip-path: polygon(0 0, 100% 0, 100% 80%, 50% 90%, 0 80%); /* Mola!!!! */

		&:hover .gato1 {
			transform: translateY(-50px);
		}

		& .gato1 {
			height: 450px;
			transform: translateY(-70px);
			transition: transform 0.5s ease-in-out;
		}
	}
</style>

<header class="hero">
	<a href="/" title="Ir a la pÃ¡gina de inicio"><img class="gato1" src={"/images/" + character} alt="Gato 1"></a>
</header>